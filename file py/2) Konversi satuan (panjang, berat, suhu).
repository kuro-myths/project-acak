def konversi_panjang():
    print("\n--- Konversi Panjang ---")
    meter = float(input("Masukkan nilai dalam meter: "))
    print(f"{meter} m = {meter * 100} cm")
    print(f"{meter} m = {meter * 1000} mm")
    print(f"{meter} m = {meter / 1000} km")
    print(f"{meter} m = {meter * 39.3701:.2f} inch")
    print(f"{meter} m = {meter * 3.28084:.2f} kaki (ft)")

def konversi_berat():
    print("\n--- Konversi Berat ---")
    kg = float(input("Masukkan nilai dalam kilogram: "))
    print(f"{kg} kg = {kg * 1000} g")
    print(f"{kg} kg = {kg * 2.20462:.2f} lbs (pounds)")
    print(f"{kg} kg = {kg * 35.274:.2f} ons")
    print(f"{kg} kg = {kg / 1000} ton")

def konversi_suhu():
 print("\n--- Konversi Suhu ---")
 c = float(input("Masukkan suhu dalam Celcius: "))
 print(f"{c} °C = {(c * 9/5) + 32:.2f} °F (Fahrenheit)")
 print(f"{c} °C = {c + 273.15:.2f} K (Kelvin)")
 print(f"{c} °C = {c * 4/5:.2f} °Re (Reamur)")

def konversi_waktu():
 print("\n--- Konversi Waktu ---")
 detik = int(input("Masukkan waktu dalam detik: "))
 menit = detik / 60
 jam = detik / 3600
 hari = detik / 86400
 print(f"{detik} detik = {menit:.2f} menit")
 print(f"{detik} detik = {jam:.2f} jam")
 print(f"{detik} detik = {hari:.2f} hari")

def konversi_data():
 print("\n--- Konversi Data ---")
 byte = int(input("Masukkan ukuran dalam byte: "))
 kb = bita / 1024
 mb = kb / 1024
 gb = mb / 1024
 tb = gb / 1024
 print(f"{byte} B = {kb:.2f} KB")
 print(f"{byte} B = {mb:.2f} MB")
 print(f"{byte} B = {gb:.2f} GB")
 print(f"{byte} B = {tb:.2f} TB")

def utama():
 sedangkan True:
 print("\n===== PROGRAM KONVERSI SATUAN LENGKAP =====")
 print("1. Konversi Panjang (meter)")
 print("2. Konversi Berat (kg)")
 print("3. Konversi Suhu (Celcius)")
 print("4. Konversi Waktu (detik)")
 print("5. Konversi Data (byte)")
 print("6. Keluar")

 pilihan = input("Pilih menu (1-6): ")

 jika pilihan == "1":
 konversi_panjang()
 elif pilihan == "2":
 konversi_berat()
 elif pilihan == "3":
 konversi_suhu()
 elif pilihan == "4":
 konversi_waktu()
 elif pilihan == "5":
 konversi_data()
 elif pilihan == "6":
 print("Terima kasih sudah menggunakan program konversi.")
 break
 else:
 print("❌ Pilihan tidak valid, coba lagi!")

jika __nama__ == "__main__":
 utama()
