def tambah(a, b):
 kembalikan a + b

def kurang(a, b):
 kembalikan a - b

def kali(a, b):
 kembalikan a * b

def bagi(a, b):
 jika b == 0:
 return "Error: pembagian dengan nol tidak bisa!"
 kembalikan a / b

def kalkulator():
 print("=== Kalkulator Sederhana ===")
 print("Pilih operasi:")
 print("1. Tambah (+)")
 print("2. Kurang (-)")
 print("3. Kali (*)")
 print("4. Bagi (/)")
    
 pilihan = input("Masukkan pilihan (1/2/3/4): ")

 mencoba:
 angka1 = float(input("Masukkan angka pertama: "))
 angka2 = float(input("Masukkan angka kedua: "))
 kecuali ValueError:
 print("Input harus berupa angka!")
 return

 jika pilihan == "1":
 print(f"Hasil: {tambah(angka1, angka2)}")
 elif pilihan == "2":
 print(f"Hasil: {kurang(angka1, angka2)}")
 elif pilihan == "3":
 print(f"Hasil: {kali(angka1, angka2)}")
 elif pilihan == "4":
 print(f"Hasil: {bagi(angka1, angka2)}")
 else:
 print("Pilihan tidak valid!")

jika __nama__ == "__main__":
 kalkulator()
